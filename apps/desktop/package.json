{
  "name": "modern-time-tracker-desktop",
  "version": "1.1.0",
  "description": "Electron desktop client for the modern time tracker",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "electronmon .",
    "dist": "electron-builder"
  },
  "keywords": [
    "time",
    "tracker",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.1.2",
    "electron-builder": "^26.0.12",
    "electronmon": "^2.0.2"
  },
  "build": {
    "appId": "com.flowtime.desktop",
    "productName": "Flowtime",
    "files": [
      "src/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "extraResources": [
      {
        "from": "resources/icons",
        "to": "icons"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "resources/icons/app-icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.productivity",
      "icon": "resources/icons/app-icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "resources/icons/app-icon.png"
    }
  }
}
