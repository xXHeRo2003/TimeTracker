{
  "root": true,
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "script"
  },
  "overrides": [
    {
      "files": [
        "src/renderer/**/*.js"
      ],
      "env": {
        "browser": true,
        "node": false
      },
      "parserOptions": {
        "sourceType": "module"
      }
    }
  ],
  "rules": {
    "no-console": [
      "warn",
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ]
  }
}
